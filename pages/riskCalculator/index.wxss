/* 整体页面背景 */
.page {
  background-color: #000000;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 标题区 */
.title-container {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #2AFF2A;
}

.sub-title {
  font-size: 26rpx;
  color: #C0C0C0;
  margin-top: 10rpx;
}

/* 输入区域 */
.input-container {
  margin-top: 20rpx;
}

.input-field {
  margin-bottom: 25rpx;
}

.input-label {
  font-size: 28rpx;
  color: #FFFFFF;
  margin-bottom: 10rpx;
  display: block;
}

/* 输入框（修复右侧不对齐问题的最终版本） */
.input {
  width: 100%;
  height: 90rpx;

  box-sizing: border-box;
  padding: 22rpx;

  border: 2rpx solid #2AFF2A;
  border-radius: 16rpx;

  background-color: #000000;
  color: #FFFFFF;
  font-size: 30rpx;

  margin-top: 10rpx;
}

/* 按钮容器 */
.button-container {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 主按钮（稳健版 / 加强版） */
.btn-primary {
  width: 85%;
  padding: 20rpx 0;
  background-color: #2AFF2A;
  border-radius: 14rpx;
  margin-bottom: 25rpx;

  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 32rpx;
  font-weight: 600;
  color: #000000;

  position: relative;
}

/* 按钮右侧箭头图标 */
.btn-icon {
  position: absolute;
  right: 30rpx;
  font-size: 32rpx;
  color: #000000;
}

/* 返回首页按钮 —— 宽度与输入框完全一致 */
.btn-back {
  width: 90%;                 /* ← 与输入框同宽 */
  height: 88rpx;              /* 与上方两个主按钮高度一致 */
  margin: 30rpx auto 0;        /* 自动水平居中 */
  
  display: flex;
  justify-content: center;
  align-items: center;

  border: 2rpx solid #2AFF2A;
  border-radius: 16rpx;

  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;

  background-color: #000;
  box-sizing: border-box;
}
