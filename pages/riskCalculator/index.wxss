/* pages/riskCalculator/index.wxss */

.page {
  background-color: #000000;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 标题区 */
.title-container {
  text-align: left;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2aff2a;
}

.sub-title {
  font-size: 26rpx;
  color: #c0c0c0;
  margin-top: 10rpx;
}

/* 权益提示条 */
.rights-banner,
.rights-bar {
  margin-top: 4rpx;
  margin-bottom: 24rpx;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(42, 255, 42, 0.06);
  border: 1px solid rgba(42, 255, 42, 0.4);
  display: flex;
  align-items: center;
}

.rights-label {
  font-size: 22rpx;
  color: #9aa0a6;
  margin-right: 8rpx;
}

.rights-text {
  font-size: 22rpx;
  color: #2aff2a;
}

/* 输入区域 */
.input-container {
  margin-top: 10rpx;
}

.input-field {
  margin-bottom: 25rpx;
}

.input-label {
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 10rpx;
  display: block;
}

/* 输入框 */
.input {
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 22rpx;

  border: 2rpx solid #2aff2a;
  border-radius: 16rpx;

  background-color: #000000;
  color: #ffffff;
  font-size: 30rpx;

  margin-top: 10rpx;
}

/* 按钮容器 */
.button-container {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 主按钮（稳健版 / 加强版） */
.btn-primary {
  width: 85%;
  padding: 22rpx 0;
  background-color: #2aff2a;
  border-radius: 16rpx;
  margin-bottom: 25rpx;

  display: flex;
  align-items: center;
  justify-content: center;

  font-size: 32rpx;
  font-weight: 600;
  color: #000000;

  position: relative;
}

/* 按钮文字 & 箭头 */
.btn-text {
  font-size: 32rpx;
}

.btn-icon {
  position: absolute;
  right: 40rpx;
  font-size: 32rpx;
}

/* 返回首页按钮 */
.btn-back {
  width: 90%;
  height: 88rpx;
  margin: 30rpx auto 0;

  display: flex;
  justify-content: center;
  align-items: center;

  border: 2rpx solid #2aff2a;
  border-radius: 16rpx;

  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;

  background-color: #000000;
  box-sizing: border-box;
}
