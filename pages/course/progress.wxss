/* pages/course/progress.wxss */

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 24rpx 32rpx;
  background-color: #050608;
}

.header {
  margin-bottom: 16rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.header-sub {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #8b8f9c;
}

.filter-bar {
  display: flex;
  align-items: center;
  background-color: #111319;
  border-radius: 999rpx;
  padding: 6rpx;
  margin-bottom: 16rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #8b8f9c;
  border-radius: 999rpx;
}

.tab.active {
  background-color: #19ff5f;
  color: #020305;
  font-weight: 600;
}

.tip-text {
  padding: 40rpx 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: #9da2b8;
}

.tip-error {
  color: #ff5b5b;
}

.list {
  flex: 1;
}

.card {
  background-color: #111319;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
}

.card-main {
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.card-time {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #a0a4ba;
}

.card-meta {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status-tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.status-progress {
  background-color: rgba(25, 255, 95, 0.18);
  color: #19ff5f;
}

.status-finished {
  background-color: rgba(85, 214, 255, 0.2);
  color: #55d6ff;
}

.progress-text {
  font-size: 24rpx;
  color: #ffffff;
}

.card-last,
.card-updated {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #8b8f9c;
}

.card-actions {
  margin-top: 6rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.btn-primary {
  background-color: #19ff5f;
  color: #020305;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.btn-secondary {
  background-color: rgba(255, 255, 255, 0.06);
  color: #ffffff;
  border-radius: 999rpx;
  font-size: 24rpx;
}
