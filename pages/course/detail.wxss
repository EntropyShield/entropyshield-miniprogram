.page {
  background-color: #050608;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.page-body {
  flex: 1;
  padding: 32rpx 32rpx 140rpx;
  box-sizing: border-box;
}

.tip-text {
  color: #aaaaaa;
  font-size: 26rpx;
  text-align: center;
  margin-top: 80rpx;
}

.tip-error {
  color: #ff4d4f;
}

/* 课程卡片 */
.course-card {
  background: #101114;
  border-radius: 24rpx;
  padding: 32rpx 28rpx 40rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.6);
}

.course-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

/* 标签 */
.tags-row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.type-tag {
  background: rgba(42, 255, 42, 0.1);
  color: #2aff2a;
}

.price-tag {
  background: rgba(255, 255, 255, 0.08);
  color: #f5f5f5;
}

.status-tag {
  background: rgba(79, 209, 197, 0.12);
  color: #4fd1c5;
}

/* 基本信息行 */
.meta-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.meta-label {
  color: #8c8c8c;
  font-size: 24rpx;
}

.meta-value {
  color: #ffffff;
  font-size: 24rpx;
  text-align: right;
}

/* 简介 */
.section {
  margin-top: 24rpx;
}

.section-title {
  color: #d9d9d9;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.section-content {
  color: #bfbfbf;
  font-size: 24rpx;
  line-height: 1.6;
}

/* 底部按钮栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 32rpx 32rpx;
  box-sizing: border-box;
  background: linear-gradient(to top, #050608, rgba(5, 6, 8, 0.9), transparent);
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
}

/* 主按钮：电光绿 */
.btn-primary {
  background-color: #2aff2a;
  color: #000000;
  font-weight: 600;
  border: none;
}

/* 次按钮：描边 */
.btn-secondary {
  background-color: transparent;
  color: #2aff2a;
  border: 2rpx solid #2aff2a;
}

/* 建议学习路径区块 */
.suggest-path {
  margin-top: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.06);
}

.suggest-title {
  font-size: 24rpx;
  color: #9aa0b3;
  margin-bottom: 6rpx;
}

.suggest-text {
  font-size: 22rpx;
  color: #c0c6d2;
  line-height: 1.6;
}
