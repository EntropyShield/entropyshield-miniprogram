.page {
  background-color: #050608;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.page-body {
  flex: 1;
  padding: 32rpx 32rpx 160rpx;
  box-sizing: border-box;
}

.tip-text {
  color: #aaaaaa;
  font-size: 26rpx;
  text-align: center;
  margin-top: 80rpx;
}

.tip-error {
  color: #ff4d4f;
}

.retry-wrap {
  margin-top: 18rpx;
  display: flex;
  justify-content: center;
}

.retry-btn {
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 999rpx;
  padding: 0 26rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.14);
  background: rgba(255, 255, 255, 0.06);
  color: #ffffff;
  font-size: 26rpx;
}
.retry-btn::after {
  border: none;
}

.course-card {
  background: #101114;
  border-radius: 24rpx;
  padding: 32rpx 28rpx 40rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.course-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1.4;
  margin-bottom: 18rpx;
}

.tags-row {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.10);
  background: rgba(255, 255, 255, 0.06);
  color: #c0c6d2;
}

.tag-public {
  border-color: rgba(42, 255, 42, 0.45);
  background-color: rgba(42, 255, 42, 0.12);
  color: #2aff2a;
}

.tag-experience {
  border-color: rgba(80, 200, 255, 0.35);
  background-color: rgba(80, 200, 255, 0.10);
  color: #cfefff;
}

.tag-camp {
  border-color: rgba(255, 210, 80, 0.35);
  background-color: rgba(255, 210, 80, 0.10);
  color: #ffe6a8;
}

.tag-risk {
  border-color: rgba(255, 120, 120, 0.35);
  background-color: rgba(255, 120, 120, 0.10);
  color: #ffd0d0;
}

.tag-salon {
  border-color: rgba(200, 160, 255, 0.35);
  background-color: rgba(200, 160, 255, 0.10);
  color: #ead7ff;
}

.tag-controller {
  border-color: rgba(255, 255, 255, 0.20);
  background-color: rgba(255, 255, 255, 0.08);
  color: #ffffff;
}

.tag-default {
  border-color: rgba(255, 255, 255, 0.10);
  background-color: rgba(255, 255, 255, 0.06);
  color: #c0c6d2;
}

.price-tag {
  border-color: rgba(255, 255, 255, 0.12);
  background: rgba(255, 255, 255, 0.06);
  color: rgba(255, 255, 255, 0.88);
}

.status-tag {
  border-color: rgba(79, 209, 197, 0.18);
  background: rgba(79, 209, 197, 0.10);
  color: #4fd1c5;
}

.status-draft {
  border-color: rgba(255, 255, 255, 0.18);
  background: rgba(255, 255, 255, 0.06);
  color: rgba(255, 255, 255, 0.70);
}

.status-published {
  border-color: rgba(42, 255, 42, 0.35);
  background: rgba(42, 255, 42, 0.12);
  color: #2aff2a;
}

.status-closed,
.status-finished {
  border-color: rgba(120, 120, 120, 0.25);
  background: rgba(120, 120, 120, 0.06);
  color: #8a8f99;
}

.status-default {
  border-color: rgba(79, 209, 197, 0.18);
  background: rgba(79, 209, 197, 0.10);
  color: #4fd1c5;
}

.meta-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.meta-label {
  color: #8c8c8c;
  font-size: 24rpx;
}

.meta-value {
  color: #ffffff;
  font-size: 24rpx;
  text-align: right;
  max-width: 480rpx;
}

.joined-tip {
  margin-top: 16rpx;
  padding: 14rpx 16rpx;
  border-radius: 18rpx;
  border: 1rpx solid rgba(42, 255, 42, 0.18);
  background: rgba(42, 255, 42, 0.08);
  color: rgba(42, 255, 42, 0.95);
  font-size: 22rpx;
}

.section {
  margin-top: 24rpx;
}

.section-title {
  color: #d9d9d9;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.section-content {
  color: #bfbfbf;
  font-size: 24rpx;
  line-height: 1.6;
}

.path-section {
  border-top: 1rpx solid rgba(255, 255, 255, 0.06);
  padding-top: 18rpx;
}

.path-title {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.path-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.78);
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.path-next {
  font-size: 22rpx;
  color: rgba(42, 255, 42, 0.90);
  line-height: 1.6;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 32rpx calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: linear-gradient(to top, #050608, rgba(5, 6, 8, 0.9), transparent);
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
}

.btn-primary {
  background-color: #2aff2a;
  color: #000000;
  font-weight: 700;
  border: none;
}

.btn-primary.btn-disabled {
  background-color: rgba(42, 255, 42, 0.30);
  color: rgba(0, 0, 0, 0.65);
}

.btn-secondary {
  background-color: transparent;
  color: #2aff2a;
  border: 2rpx solid #2aff2a;
}

.btn-primary::after,
.btn-secondary::after {
  border: none;
}
