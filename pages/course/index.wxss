.page {
  background-color: #0d0d0d;
  min-height: 100vh;
  padding: 28rpx 24rpx 40rpx;
  box-sizing: border-box;
}

.topbar {
  border-radius: 28rpx;
  background: linear-gradient(135deg, #11141b, #171e27);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  padding: 22rpx 20rpx 18rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.6);
}

/* [P2-LIST-UX-20251215] 标题行 */
.top-hd{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top-link{
  font-size: 22rpx;
  color: #2aff2a;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(42, 255, 42, 0.35);
  background-color: rgba(42, 255, 42, 0.06);
}

.top-title {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 700;
}

.top-sub {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #a9b2c2;
}

.tabs {
  margin-top: 16rpx;
  display: flex;
  background-color: rgba(255, 255, 255, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  border-radius: 999rpx;
  overflow: hidden;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  font-size: 22rpx;
  color: #a9b2c2;
}

.tab-on {
  background-color: rgba(42, 255, 42, 0.14);
  color: #2aff2a;
  font-weight: 600;
}

.search {
  margin-top: 14rpx;
  display: flex;
  align-items: center;
  background-color: #14171c;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  border-radius: 18rpx;
  padding: 10rpx 12rpx;
}

.search-input {
  flex: 1;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.search-ph {
  color: #8a8f99;
  font-size: 24rpx;
}

.search-clear {
  padding: 10rpx 14rpx;
  border-radius: 14rpx;
  background-color: rgba(255, 255, 255, 0.06);
  color: #c0c6d2;
  font-size: 22rpx;
}

.top-hint {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: rgba(192, 198, 210, 0.75);
}

.error {
  margin-top: 18rpx;
  padding: 18rpx 18rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 80, 80, 0.08);
  border: 1rpx solid rgba(255, 80, 80, 0.22);
}

.error-text {
  font-size: 22rpx;
  color: #ffb3b3;
}

.error-btn {
  margin-top: 14rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.14);
  background-color: rgba(255, 255, 255, 0.06);
  color: #ffffff;
  font-size: 24rpx;
}
.error-btn::after { border: none; }

.loading {
  margin-top: 18rpx;
}

.skeleton {
  height: 140rpx;
  border-radius: 22rpx;
  background-color: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  margin-bottom: 14rpx;
}

.empty {
  margin-top: 24rpx;
  padding: 26rpx 22rpx;
  border-radius: 22rpx;
  background-color: #14171c;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.empty-title {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 600;
}

.empty-sub {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #a9b2c2;
}

.group {
  margin-top: 22rpx;
}

.group-hd {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx 4rpx 12rpx;
}

.group-date {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 600;
}

.group-count {
  font-size: 22rpx;
  color: #8a8f99;
}

.card {
  border-radius: 24rpx;
  background-color: #14171c;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  padding: 18rpx 18rpx 16rpx;
  margin-bottom: 14rpx;
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-top-right{
  display: flex;
  align-items: center;
}

/* [P2-LIST-PROGRESS-20251215] 已加入/进度角标 */
.joined{
  margin-right: 10rpx;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(42, 255, 42, 0.35);
  background-color: rgba(42, 255, 42, 0.08);
  color: #2aff2a;
}

.pill {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #ffffff;
  border: 1rpx solid rgba(255, 255, 255, 0.10);
  background-color: rgba(255, 255, 255, 0.06);
}

.pill-promo {
  border-color: rgba(42, 255, 42, 0.45);
  background-color: rgba(42, 255, 42, 0.12);
  color: #2aff2a;
}

.pill-experience {
  border-color: rgba(80, 200, 255, 0.35);
  background-color: rgba(80, 200, 255, 0.10);
  color: #cfefff;
}

.pill-camp {
  border-color: rgba(255, 210, 80, 0.35);
  background-color: rgba(255, 210, 80, 0.10);
  color: #ffe6a8;
}

.pill-salon {
  border-color: rgba(200, 160, 255, 0.35);
  background-color: rgba(200, 160, 255, 0.10);
  color: #ead7ff;
}

.pill-risk {
  border-color: rgba(255, 120, 120, 0.35);
  background-color: rgba(255, 120, 120, 0.10);
  color: #ffd0d0;
}

.pill-paid {
  border-color: rgba(255, 255, 255, 0.20);
  background-color: rgba(255, 255, 255, 0.08);
  color: #ffffff;
}

.pill-default {
  border-color: rgba(255, 255, 255, 0.10);
  background-color: rgba(255, 255, 255, 0.06);
  color: #c0c6d2;
}

.status {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.10);
  color: #a9b2c2;
}

.status-upcoming {
  border-color: rgba(169, 178, 194, 0.25);
  background-color: rgba(169, 178, 194, 0.06);
}

.status-live {
  border-color: rgba(42, 255, 42, 0.45);
  background-color: rgba(42, 255, 42, 0.12);
  color: #2aff2a;
}

.status-ended {
  border-color: rgba(120, 120, 120, 0.25);
  background-color: rgba(120, 120, 120, 0.06);
  color: #8a8f99;
}

.status-draft {
  border-color: rgba(255, 255, 255, 0.18);
  background-color: rgba(255, 255, 255, 0.06);
  color: rgba(255, 255, 255, 0.7);
}

.card-title {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 700;
  line-height: 1.35;
}

.card-meta {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.meta-time {
  font-size: 22rpx;
  color: #a9b2c2;
}

.meta-dot {
  margin: 0 8rpx;
  font-size: 22rpx;
  color: rgba(169, 178, 194, 0.6);
}

.meta-price {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.86);
}

.card-desc {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #c0c6d2;
  line-height: 1.5;
  max-height: 96rpx;
  overflow: hidden;
}

.card-actions {
  margin-top: 14rpx;
  display: flex;
  justify-content: flex-end;
}

.btn {
  padding: 0 18rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  margin-left: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.10);
  color: #c0c6d2;
  background-color: rgba(255, 255, 255, 0.06);
}

button.btn {
  box-sizing: border-box;
}

.btn.primary {
  border: 0;
  background-color: #2aff2a;
  color: #050608;
  font-weight: 600;
}

.btn.ghost {
  background-color: rgba(255, 255, 255, 0.06);
}

.footer-gap {
  height: calc(40rpx + env(safe-area-inset-bottom));
}
