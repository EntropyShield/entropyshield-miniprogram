.page {
  background-color: #0d0d0d;
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 通用卡片 */
.card {
  background: #16181d;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-header {
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
}

.card-subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #8a8d93;
}

/* 表单结构 */
.form-item {
  margin-bottom: 20rpx;
}

.form-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.form-row .form-item {
  margin-bottom: 0;
}

.form-row .half {
  width: 48%;
}

.label {
  display: block;
  font-size: 24rpx;
  color: #c4c7ce;
  margin-bottom: 8rpx;
}

.input {
  width: 100%;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  background: #1c1f25;
  color: #ffffff;
  font-size: 26rpx;
  box-sizing: border-box;
}

.input::placeholder {
  color: #6c6f75;
}

/* picker 展示 */
.picker-display {
  width: 100%;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  background: #1c1f25;
  box-sizing: border-box;
}

.picker-value {
  font-size: 26rpx;
  color: #ffffff;
}

/* textarea */
.textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  background: #1c1f25;
  color: #ffffff;
  font-size: 26rpx;
  box-sizing: border-box;
}

.textarea::placeholder {
  color: #6c6f75;
}

/* 快捷标签 */
.tag-row {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 9999rpx;
  border: 1rpx solid rgba(42, 255, 42, 0.5);
  color: #2aff2a;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.remark-tip {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #8a8d93;
}

/* 预约摘要卡片 */
.card-summary {
  background: #101218;
}

.summary-title {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.summary-line {
  font-size: 24rpx;
  color: #c4c7ce;
  margin-top: 4rpx;
}

/* 底部按钮区 */
.bottom-actions {
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  padding-top: 8rpx;
  padding-bottom: 16rpx;
  background: #0d0d0d;
  display: flex;
  gap: 12rpx;
}

.btn-primary {
  flex: 1;
  padding: 18rpx 0;
  border-radius: 9999rpx;
  font-size: 28rpx;
  color: #020305;
  background: linear-gradient(90deg, #18b74b, #2aff2a);
}

.btn-secondary {
  flex: 1;
  padding: 18rpx 0;
  border-radius: 9999rpx;
  font-size: 28rpx;
  color: #c4c7ce;
  border: 1rpx solid #3a3d45;
  background: transparent;
}
