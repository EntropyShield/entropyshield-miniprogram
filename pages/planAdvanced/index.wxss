.page {
  background: #000000;
  color: #EAEAEA;
}

.pa-page {
  min-height: 100vh;
  padding: 16px;
}

.card {
  background: #111111;
  border-radius: 16px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow:
    0 10px 28px rgba(0, 0, 0, 0.35),
    inset 0 0 0 1px rgba(255, 255, 255, 0.04);
}

.pa-title {
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 6px;
}

.pa-sub {
  font-size: 12px;
  color: #9AA0A6;
  line-height: 1.6;
}

.pa-highlight {
  color: #4C6BFF;
  font-weight: 700;
}

.pa-info {
  margin-top: 8px;
  font-size: 13px;
}

.pa-label {
  color: #9AA0A6;
}

.pa-value {
  color: #EAEAEA;
}

.pa-sec-title {
  font-size: 15px;
  font-weight: 600;
  margin-bottom: 8px;
}

.pa-step-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6px 0;
}

.pa-step-label {
  font-size: 14px;
}

.pa-step-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.pa-step-text {
  font-size: 12px;
}

.pa-divider {
  height: 1px;
  margin: 10px 0;
  background: #2A2A2A;
}

.pa-fee-line {
  font-size: 12px;
  color: #EAEAEA;
  margin-top: 4px;
}

.pa-tip {
  font-size: 11px;
  color: #9AA0A6;
  padding: 0 4px;
}
