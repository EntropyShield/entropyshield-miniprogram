<!-- pages/planAdvanced/index.wxml -->
<view class="page pa-page">
  <!-- 顶部总览卡片 -->
  <view class="card pa-summary">
    <view class="pa-summary-header">
      <text class="pa-tag">加强版 · 高阶风控方案</text>
    </view>

    <view class="pa-summary-row">
      <text class="pa-label">标的代码</text>
      <text class="pa-value">{{code || '—'}}</text>
    </view>
    <view class="pa-summary-row">
      <text class="pa-label">账户资金</text>
      <text class="pa-value">{{totalCapital}} 元</text>
    </view>
    <view class="pa-summary-row">
      <text class="pa-label">首次买入价</text>
      <text class="pa-value">{{firstPrice}} 元</text>
    </view>
    <view class="pa-summary-row">
      <text class="pa-label">会员类型</text>
      <text class="pa-value">{{membershipType || '高阶策略 · 演示版'}}</text>
    </view>

    <view class="pa-summary-split"></view>

    <view class="pa-summary-row">
      <text class="pa-label">目标收益价格</text>
      <text class="pa-value pa-value-strong">{{targetPrice}} 元</text>
    </view>
    <view class="pa-summary-row">
      <text class="pa-label">目标收益利润</text>
      <text class="pa-value pa-value-strong">{{targetProfit}} 元</text>
    </view>
  </view>

  <!-- 高阶分批建仓步骤与止损明细 -->
  <view class="card pa-steps">
    <view class="pa-section-title">高阶分批建仓步骤与止损明细</view>

    <block wx:for="{{steps}}" wx:key="label">
      <view class="pa-step-block">
        <view class="pa-step-header">
          <view class="pa-step-dot"></view>
          <text class="pa-step-title">{{item.label}}</text>
        </view>

        <view class="pa-step-grid">
          <view class="pa-step-item">
            <text class="pa-label">买入价</text>
            <text class="pa-value">{{item.buyPrice}} 元</text>
          </view>
          <view class="pa-step-item">
            <text class="pa-label">买入数量</text>
            <text class="pa-value">{{item.buyShares}} 股</text>
          </view>
          <view class="pa-step-item">
            <text class="pa-label">买入金额</text>
            <text class="pa-value">{{item.buyAmount}} 元</text>
          </view>
          <view class="pa-step-item">
            <text class="pa-label">止损价格（全出）</text>
            <text class="pa-value pa-value-warning">{{item.stopPrice}} 元</text>
          </view>
          <view class="pa-step-item">
            <text class="pa-label">止损金额</text>
            <text class="pa-value pa-value-warning">{{item.stopAmount}} 元</text>
          </view>
        </view>
      </view>
    </block>
  </view>

  <!-- 底部提示 -->
  <view class="pa-tip">
    * 本页为“加强版”演示方案，仅基于固定参数推演高阶风控结构，不构成任何买卖建议。
  </view>

  <!-- 底部按钮区域 -->
  <view class="pa-bottom">
    <view class="pa-btn pa-btn-outline" bindtap="goPayIntro">
      想要更高阶服务 · 查看进阶控局者服务
    </view>

    <view class="pa-bottom-row">
      <view class="pa-btn pa-btn-secondary" bindtap="goBackCalc">
        返回风险计算器
      </view>
      <view class="pa-btn pa-btn-primary" bindtap="goHome">
        返回首页
      </view>
    </view>
  </view>
</view>
