/* pages/fissionTask/index.wxss */

/* 整个页面容器 */
.page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 24rpx 40rpx;
  background-color: #05070b;
}

/* 通用卡片 */
.card {
  background: rgba(15, 18, 28, 0.96);
  border-radius: 24rpx;
  padding: 24rpx 24rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.6);
  border: 1rpx solid rgba(67, 255, 163, 0.12);
}

/* 标题 & 小标题 */
.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #e9f5ff;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  line-height: 1.6;
  color: #a0a6b6;
}

/* 专属邀请码卡片 */
.card-invite .invite-row {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.invite-code {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #43ffa3;
  letter-spacing: 4rpx;
  padding: 12rpx 16rpx;
  background: rgba(7, 10, 18, 0.9);
  border-radius: 16rpx;
  border: 1rpx solid rgba(67, 255, 163, 0.3);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.btn-copy {
  padding: 0 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 999rpx;
  background: #43ffa3;
  color: #05070b;
}

/* 提示文字 */
.tips {
  margin-top: 18rpx;
  font-size: 24rpx;
  line-height: 1.7;
  color: #7f8597;
}

/* 绑定邀请码卡片 */
.card-bind .section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #e9f5ff;
  margin-bottom: 16rpx;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: rgba(8, 11, 20, 0.95);
  border: 1rpx solid rgba(128, 142, 170, 0.8);
  color: #e9f5ff;
  font-size: 26rpx;
}

.bound-info {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #9aa2c0;
}

/* 通用按钮样式 */
.btn-primary {
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  background: linear-gradient(135deg, #39ffa0, #15d28a);
  color: #05070b;
}

.btn-disabled {
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  text-align: center;
  background: rgba(33, 37, 52, 0.9);
  color: #777f94;
}

/* 奖励统计卡片 */
.card-reward .section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #e9f5ff;
  margin-bottom: 12rpx;
}

.reward-summary {
  margin-top: 8rpx;
  margin-bottom: 16rpx;
}

.reward-times {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #43ffa3;
  margin-bottom: 6rpx;
}

.reward-desc {
  font-size: 24rpx;
  line-height: 1.7;
  color: #9fa5bd;
}

/* 奖励明细列表 */
.reward-list {
  max-height: 520rpx;
  margin-top: 12rpx;
}

.reward-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(61, 70, 98, 0.6);
}

.reward-item:last-child {
  border-bottom-width: 0;
}

.reward-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
}

.reward-title {
  font-size: 26rpx;
  color: #e9f5ff;
}

.reward-tag {
  font-size: 24rpx;
  color: #43ffa3;
}

.reward-bottom {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #858ba0;
}

.reward-date {
  opacity: 0.88;
}

.reward-remark {
  max-width: 60%;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 无奖励内容占位 */
.reward-empty {
  margin-top: 16rpx;
  font-size: 24rpx;
  line-height: 1.7;
  color: #858ba0;
}

/* 底部操作按钮卡片 */
.card-actions {
  margin-top: 8rpx;
}

.btn-ghost {
  margin-top: 16rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  text-align: center;
  background: transparent;
  border: 1rpx solid rgba(126, 139, 170, 0.7);
  color: #c3c8dc;
}

/* 底部奖励说明卡片 */
.notice-card {
  background: rgba(10, 12, 20, 0.95);
  border-radius: 24rpx;
  padding: 22rpx 24rpx 26rpx;
  margin: 0 24rpx 40rpx;
  border: 1rpx dashed rgba(119, 136, 170, 0.7);
}

.notice-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #e9f5ff;
  margin-bottom: 10rpx;
}

.notice-text {
  font-size: 24rpx;
  line-height: 1.8;
  color: #8f96af;
}
