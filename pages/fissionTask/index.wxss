/* pages/fissionTask/index.wxss */

.page {
  min-height: 100vh;
  background-color: #000000;
  padding: 32rpx 24rpx 40rpx;
  box-sizing: border-box;
  color: #ffffff;
}

.card {
  background-color: #050505;
  border-radius: 24rpx;
  padding: 24rpx 22rpx 28rpx;
  border: 1px solid #1a2a1a;
  box-shadow: 0 0 24rpx rgba(0, 0, 0, 0.7);
  margin-bottom: 24rpx;
}

/* 标题区域 */
.header-card .title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.header-card .sub-title {
  font-size: 24rpx;
  color: #9aa0a6;
  line-height: 1.6;
}

/* 当前权益 */
.rights-card .rights-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.rights-label {
  font-size: 24rpx;
  color: #cfd2d7;
}

.rights-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #2aff2a;
  text-align: right;
}

.rights-tip {
  font-size: 22rpx;
  color: #9aa0a6;
  margin-top: 6rpx;
}

/* 任务说明 */
.task-title {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.task-sub {
  font-size: 22rpx;
  color: #9aa0a6;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.task-list {
  margin-top: 8rpx;
}

.task-item {
  padding: 12rpx 14rpx;
  border-radius: 16rpx;
  background-color: #070b10;
  border: 1px solid rgba(42, 255, 42, 0.25);
  margin-bottom: 10rpx;
}

.task-name {
  font-size: 24rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.task-reward {
  font-size: 22rpx;
  color: #cfd2d7;
}

.task-tip {
  font-size: 22rpx;
  color: #9aa0a6;
  margin-top: 6rpx;
}

/* 兑换码区域 */
.coupon-title {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.coupon-sub {
  font-size: 22rpx;
  color: #9aa0a6;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.coupon-input-row {
  margin-top: 6rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 12rpx;
}

.coupon-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  border-radius: 999rpx;
  background-color: #020617;
  color: #ffffff;
  font-size: 24rpx;
  border: 1px solid #374151;
  box-sizing: border-box;
}

.coupon-btn {
  width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 999rpx;
  border: none;
  background-color: #2aff2a;
  color: #000000;
  font-size: 26rpx;
  font-weight: 600;
}

.coupon-used {
  margin-top: 16rpx;
}

.used-title {
  font-size: 22rpx;
  color: #9aa0a6;
  margin-bottom: 6rpx;
}

.used-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.used-code {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  border: 1px solid #4b5563;
  font-size: 22rpx;
  color: #e5e7eb;
}

/* 顾问 & 按钮 */
.advisor-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.advisor-label {
  font-size: 24rpx;
  color: #cfd2d7;
}

.advisor-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #2aff2a;
}

.advisor-tip {
  font-size: 22rpx;
  color: #9aa0a6;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.btn-copy,
.btn-go-calc,
.btn-back {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 999rpx;
  font-size: 26rpx;
  margin-top: 8rpx;
}

.btn-copy {
  background-color: #2aff2a;
  color: #000000;
  border: none;
}

.btn-go-calc {
  background-color: transparent;
  border: 1px solid rgba(42, 255, 42, 0.7);
  color: #e5e7eb;
}

.btn-back {
  background-color: transparent;
  border: 1px dashed #555555;
  color: #9aa0a6;
}
