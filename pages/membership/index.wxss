/* pages/membership/index.wxss */

.page {
  min-height: 100vh;
  background-color: #000000;
  padding: 32rpx 24rpx 40rpx;
  box-sizing: border-box;
  color: #ffffff;
}

.card {
  background-color: #050505;
  border-radius: 24rpx;
  padding: 24rpx 22rpx 28rpx;
  border: 1px solid #1a2a1a;
  box-shadow: 0 0 24rpx rgba(0, 0, 0, 0.7);
  margin-bottom: 24rpx;
}

/* 顶部方案卡片 */
.summary-card {
  border-color: rgba(42, 255, 42, 0.5);
}

.summary-tag {
  display: inline-block;
  padding: 4rpx 18rpx;
  border-radius: 999rpx;
  border: 1px solid rgba(42, 255, 42, 0.7);
  font-size: 22rpx;
  color: #2aff2a;
  margin-bottom: 10rpx;
}

.summary-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.summary-row {
  margin-top: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.summary-label {
  font-size: 24rpx;
  color: #cfd2d7;
}

.summary-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 选择方式说明 */
.info-card {
  border-color: rgba(42, 255, 42, 0.3);
}

.info-title {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.info-sub {
  font-size: 22rpx;
  color: #9aa0a6;
  line-height: 1.6;
}

/* 会员方案卡片 */
.plan-card {
  border-color: rgba(42, 255, 42, 0.3);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
}

.plan-title {
  font-size: 26rpx;
  font-weight: 600;
}

.plan-price {
  display: flex;
  align-items: baseline;
}

.plan-price-main {
  font-size: 30rpx;
  font-weight: 700;
  color: #2aff2a;
  margin-right: 6rpx;
}

.plan-price-unit {
  font-size: 22rpx;
  color: #9aa0a6;
}

.plan-desc {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #cfd2d7;
  line-height: 1.6;
}

/* 按钮样式 */
.btn-primary {
  margin-top: 18rpx;
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  background-color: #2aff2a;
  color: #000000;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

/* 底部说明 & 返回按钮 */
.bottom-card {
  border-color: #1a2a1a;
}

.note-title {
  font-size: 24rpx;
  color: #9aa0a6;
  margin-bottom: 8rpx;
}

.note-text text {
  display: block;
  font-size: 22rpx;
  color: #5f6368;
  line-height: 1.6;
  margin-bottom: 4rpx;
}

.btn-secondary {
  margin-top: 16rpx;
  width: 100%;
  height: 80rpx;
  border-radius: 999rpx;
  background-color: #2aff2a;
  color: #000000;
  font-size: 26rpx;
  border: none;
}

.btn-ghost {
  margin-top: 12rpx;
  width: 100%;
  height: 80rpx;
  border-radius: 999rpx;
  border: 1px dashed #555555;
  background-color: transparent;
  color: #9aa0a6;
  font-size: 24rpx;
}
