.page {
  background-color: #000000;
  min-height: 100vh;
  padding: 32rpx 32rpx 40rpx;
  box-sizing: border-box;
  color: #ffffff;
}

/* 头部标题区 */
.page-header {
  margin-bottom: 24rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
}

.page-subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #909090;
}

/* 筛选 Tab */
.filter-tab {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 24rpx;
  background-color: #111111;
  border-radius: 999rpx;
  padding: 4rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #b0b0b0;
  border-radius: 999rpx;
}

.tab-item.active {
  background-color: #2aff2a;
  color: #000000;
  font-weight: 600;
}

/* 状态 / 错误提示 */
.tip-text {
  text-align: center;
  color: #999999;
  margin-top: 40rpx;
  font-size: 26rpx;
}

.tip-error {
  color: #ff4d4f;
}

/* 列表滚动区 */
.course-scroll {
  height: calc(100vh - 220rpx - env(safe-area-inset-bottom));
}

/* 日期行 */
.date-row {
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

.date-text {
  font-size: 24rpx;
  color: #666666;
}

/* 课程卡片 */
.course-card {
  background-color: #151515;
  border-radius: 24rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 20rpx;
}

/* 顶部：标题 + 类型 */
.card-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title-wrap {
  display: flex;
  align-items: center;
  flex: 1;
}

.title-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #2aff2a;
  margin-right: 8rpx;
}

.course-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 类型标签（promo / lead / paid / camp） */
.type-tag {
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #dddddd;
  border: 1rpx solid #444444;
}

/* 中部：时间 + 状态 */
.card-middle {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.time-text {
  font-size: 24rpx;
  color: #bbbbbb;
}

/* 状态标签：未开始 / 进行中 / 已完成 */
.status-tag {
  min-width: 120rpx;
  text-align: center;
  padding: 6rpx 0;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.status-not_started {
  background-color: #333333;
  color: #dddddd;
}

.status-in_progress {
  background-color: #2aff2a;
  color: #000000;
  font-weight: 600;
}

.status-finished {
  background-color: #222222;
  color: #888888;
}

/* 底部进度条（可选） */
.card-bottom {
  margin-top: 18rpx;
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 10rpx;
  border-radius: 999rpx;
  background-color: #303030;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  border-radius: 999rpx;
  background-color: #2aff2a;
}

.progress-label {
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #aaaaaa;
}

/* 空列表提示 */
.empty-tip {
  margin-top: 80rpx;
  text-align: center;
  color: #666666;
  font-size: 26rpx;
}
