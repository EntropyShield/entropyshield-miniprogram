/* 整体页面 */
.page {
  min-height: 100vh;
  background-color: #000000;
  padding: 32rpx 24rpx 40rpx;
  box-sizing: border-box;
  color: #ffffff;
}

/* 通用卡片 */
.card {
  background-color: #050505;
  border-radius: 24rpx;
  padding: 24rpx 24rpx 28rpx;
  margin-bottom: 28rpx;
  border: 1px solid #1a2a1a;
  box-shadow: 0 0 24rpx rgba(0, 0, 0, 0.6);
}

/* 顶部提示卡 */
.header-card {
  border-color: #2aff2a33;
}

.header-top {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.day-pill {
  padding: 6rpx 22rpx;
  border-radius: 999rpx;
  border: 1px solid #2aff2a;
  margin-right: 16rpx;
}

.day-pill-text {
  font-size: 22rpx;
  color: #2aff2a;
}

.header-tip {
  flex: 1;
  font-size: 24rpx;
  color: #e0e0e0;
  line-height: 1.5;
}

.header-sub {
  font-size: 22rpx;
  color: #9aa0a6;
  line-height: 1.5;
}

/* 区块标题 */
.section-card {
  border-color: #1a2a1a;
}

.section-title-row {
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
}

.section-sub {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #9aa0a6;
  line-height: 1.5;
}

/* 示例气泡 */
.example-chip {
  margin-top: 12rpx;
  margin-bottom: 12rpx;
  padding: 12rpx 16rpx;
  border-radius: 16rpx;
  background-color: #0b0b0b;
  border: 1px solid #262626;
}

.example-label {
  font-size: 22rpx;
  color: #2aff2a;
  margin-right: 8rpx;
}

.example-text {
  font-size: 22rpx;
  color: #cfd2dc;
}

/* 文本输入区域 */
.note-input {
  margin-top: 8rpx;
  min-height: 140rpx;
  padding: 16rpx 18rpx;
  border-radius: 18rpx;
  background-color: #000000;
  border: 1px solid #1f1f1f;
  color: #e0e0e0;
  font-size: 24rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

/* 底部按钮区域 */
.action-card {
  text-align: center;
}

.btn-primary,
.btn-secondary,
.btn-ghost {
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 12rpx;
}

/* 绿色主按钮 */
.btn-primary {
  background-color: #2aff2a;
  color: #000000;
  font-weight: 600;
  border: none;
}

/* 边框按钮（浅绿） */
.btn-secondary {
  background-color: transparent;
  color: #2aff2a;
  border: 1px solid #2aff2a;
}

/* 暗灰幽灵按钮 */
.btn-ghost {
  background-color: transparent;
  color: #e0e0e0;
  border: 1px solid #333333;
}

/* 底部说明 */
.notice-card {
  border-style: dashed;
  border-color: #333333;
  background-color: #050505;
}

.notice-title {
  font-size: 24rpx;
  color: #9aa0a6;
  margin-bottom: 8rpx;
}

.notice-text text {
  display: block;
  font-size: 22rpx;
  color: #5f6368;
  line-height: 1.6;
}
