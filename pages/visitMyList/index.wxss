.page {
  min-height: 100vh;
  padding: 24rpx;
  background-color: #050608;
  box-sizing: border-box;
}

.loading-text {
  margin-top: 80rpx;
  text-align: center;
  color: #9ca3af;
}

.empty {
  margin-top: 120rpx;
  text-align: center;
  color: #9ca3af;
}

.empty-title {
  font-size: 32rpx;
  color: #e5e7eb;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  margin-bottom: 24rpx;
}

.primary-btn {
  margin: 0 80rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #22c55e, #2aff2a);
  color: #020617;
  font-size: 30rpx;
  font-weight: 600;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background-color: #14161c;
  border-radius: 24rpx;
  padding: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.date {
  font-size: 28rpx;
  color: #e5e7eb;
}

.status {
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.status-pending {
  background-color: #1e293b;
  color: #facc15;
}

.status-confirmed {
  background-color: #022c22;
  color: #22c55e;
}

.status-done {
  background-color: #111827;
  color: #a5b4fc;
}

.status-cancel {
  background-color: #2f1f1f;
  color: #f87171;
}

.row {
  display: flex;
  margin-bottom: 4rpx;
  font-size: 26rpx;
}

.label {
  color: #9ca3af;
}

.value {
  color: #e5e7eb;
}

.created-at {
  margin-top: 8rpx;
}

/* 顶部日期 + 时间段行美化 */
.date-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.date-main {
  font-size: 30rpx;
  font-weight: 600;
  color: #f9fafb;
}

.date-dot {
  font-size: 26rpx;
  color: #6b7280;
}

.date-time {
  font-size: 26rpx;
  color: #a5b4fc;
}

/* 卡片底部操作区 */
.card-footer {
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-end;
}

/* 取消预约按钮 */
.btn-cancel {
  padding: 12rpx 40rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  line-height: 1.2;
  color: #fca5a5;
  border: 1rpx solid rgba(248, 113, 113, 0.8);
  background-color: transparent;
}

/* 去掉小程序原生 button 默认背景 */
.btn-cancel::after {
  border: none;
}
