/* 整体页面 */
.page {
  min-height: 100vh;
  background-color: #000000;
  padding: 32rpx 24rpx 40rpx;
  box-sizing: border-box;
  color: #ffffff;
}

/* 通用卡片 */
.card {
  background-color: #050505;
  border-radius: 24rpx;
  padding: 24rpx 24rpx 28rpx;
  margin-bottom: 28rpx;
  border: 1px solid #1a2a1a;
  box-shadow: 0 0 24rpx rgba(0, 0, 0, 0.6);
}

/* 顶部品牌卡片 */
.brand-card {
  border-color: #2aff2a33;
}

.brand-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.brand-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  background-color: #020202;
  margin-right: 24rpx;
}

.brand-text {
  flex: 1;
}

.brand-title text {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 主按钮 */
.btn-primary {
  margin-top: 8rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  background-color: #2aff2a;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000000;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
}

/* 品牌下方标签 */
.brand-tags {
  border-top: 1px solid #1a1a1a;
  padding-top: 16rpx;
}

.tag {
  display: flex;
  margin-top: 8rpx;
}

.tag-label {
  font-size: 24rpx;
  color: #9aa0a6;
  width: 172rpx;
}

.tag-value {
  font-size: 24rpx;
  color: #e0e0e0;
}

/* 区块标题统一样式 */
.section-card {
  padding-top: 4rpx;
}

/* 标题栏 */
.section-header {
  margin-bottom: 18rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.section-sub {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #9aa0a6;
}

/* 测试列表 */
.test-item {
  margin-top: 16rpx;
  padding: 14rpx 4rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #151515;
}

.test-left {
  display: flex;
  align-items: center;
}

.bullet {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.bullet-red {
  background-color: #ff5252;
}

.bullet-green {
  background-color: #2aff2a;
}

.test-text {
  display: flex;
  flex-direction: column;
}

.test-title {
  font-size: 26rpx;
  color: #ffffff;
}

.test-desc {
  margin-top: 2rpx;
  font-size: 22rpx;
  color: #9aa0a6;
}

.test-right .test-action {
  font-size: 24rpx;
  color: #2aff2a;
}

/* chips 行 */
.chips-row {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.chip {
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  border: 1px solid #2aff2a;
  color: #2aff2a;
  font-size: 22rpx;
  margin-right: 12rpx;
  margin-top: 8rpx;
}

/* 次级按钮 */
.btn-secondary {
  margin-top: 4rpx;
  width: 100%;
  height: 80rpx;
  border-radius: 999rpx;
  border: 1px solid #2aff2a;
  background-color: transparent;
  color: #2aff2a;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 裂变权益列表 */
.benefit-list {
  margin-top: 8rpx;
  margin-bottom: 16rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.benefit-tag {
  font-size: 24rpx;
  color: #fdd835;
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
  border: 1px solid #fdd83566;
  margin-right: 12rpx;
}

.benefit-text {
  font-size: 24rpx;
  color: #e0e0e0;
}

/* 边框按钮 */
.btn-outline {
  margin-top: 8rpx;
  width: 100%;
  height: 80rpx;
  border-radius: 999rpx;
  border: 1px dashed #fbbf24;
  background-color: #1b1204;
  color: #fbbf24;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 合规提示 */
.notice-card {
  border-style: dashed;
  border-color: #333333;
  background-color: #050505;
}

.notice-title {
  font-size: 24rpx;
  color: #9aa0a6;
  margin-bottom: 8rpx;
}

.notice-text text {
  display: block;
  font-size: 22rpx;
  color: #5f6368;
  line-height: 1.6;
}
