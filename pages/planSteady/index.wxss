/* pages/planSteady/index.wxss */

/* 页面整体 */
.ps-page {
  min-height: 100vh;
  padding: 24rpx 24rpx 40rpx;
  background-color: #000000;
  box-sizing: border-box;
  color: #ffffff;
}

/* 通用卡片 */
.card {
  background: #050505;
  border-radius: 24rpx;
  padding: 24rpx 26rpx;
  border: 1rpx solid #2aff2a33;
  box-shadow: 0 0 24rpx rgba(42, 255, 42, 0.12);
  margin-bottom: 24rpx;
}

/* 顶部总览卡片 */
.ps-summary-header {
  margin-bottom: 16rpx;
}

.ps-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #0c0c0c;
  background: linear-gradient(90deg, #2aff2a, #63ff8f);
  font-weight: 600;
}

.ps-summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  padding: 6rpx 0;
}

.ps-label {
  color: #9aa0a6;
}

.ps-value {
  color: #ffffff;
}

.ps-value-strong {
  color: #2aff2a;
  font-weight: 600;
}

.ps-summary-split {
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #2aff2a33, transparent);
  margin: 12rpx 0 4rpx;
}

/* 分批建仓部分 */
.ps-steps {
  margin-top: 8rpx;
}

.ps-section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.ps-step-block {
  padding: 18rpx 0 10rpx;
  border-top: 1rpx solid #1c1c1c;
}

.ps-step-block:first-child {
  border-top-width: 0;
}

.ps-step-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.ps-step-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #2aff2a;
  margin-right: 10rpx;
}

.ps-step-title {
  font-size: 26rpx;
  color: #2aff2a;
  font-weight: 600;
}

/* 每一档细节信息网格展示 */
.ps-step-grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 4rpx;
}

.ps-step-item {
  width: 50%;
  padding: 4rpx 0;
  font-size: 24rpx;
}

.ps-value-warning {
  color: #ff5c5c;
}

/* 底部提示 */
.ps-tip {
  font-size: 22rpx;
  color: #666c72;
  line-height: 1.6;
  margin: 4rpx 8rpx 12rpx;
}

/* 底部按钮区域 */
.ps-bottom {
  margin: 0 24rpx;
}

.ps-bottom-btn {
  height: 88rpx;
  border-radius: 999rpx;
  border: 1rpx solid #2aff2a;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
}

.ps-bottom-btn text {
  font-size: 30rpx;
  color: #2aff2a;
  font-weight: 600;
}

/* 次要按钮：空心 + 淡绿色文字 */
.ps-bottom-btn-secondary {
  background-color: transparent;
  border-color: #2aff2a66;
}

.ps-bottom-btn-secondary text {
  font-size: 26rpx;
  font-weight: 500;
  color: #c0ffc0;
}
