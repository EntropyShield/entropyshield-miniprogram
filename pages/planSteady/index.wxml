<!-- pages/planSteady/index.wxml -->
<view class="page ps-page">
  <!-- 顶部总览卡片 -->
  <view class="card ps-summary">
    <view class="ps-summary-header">
      <text class="ps-tag">稳健版 · 风控方案</text>
    </view>

    <!-- 账户 & 标的基础信息 -->
    <view class="ps-summary-row">
      <text class="ps-label">账户资金</text>
      <text class="ps-value">{{totalCapital}} 元</text>
    </view>
    <view class="ps-summary-row">
      <text class="ps-label">标的代码</text>
      <text class="ps-value">{{code || '—'}}</text>
    </view>
    <view class="ps-summary-row">
      <text class="ps-label">建仓价格</text>
      <text class="ps-value">{{firstPrice}} 元</text>
    </view>
    <view class="ps-summary-row">
      <text class="ps-label">会员类型</text>
      <text class="ps-value">{{membershipType || '稳健策略 · 演示版'}}</text>
    </view>

    <view class="ps-summary-split"></view>

    <!-- 这一笔交易的“结果感受” -->
    <view class="ps-summary-row">
      <text class="ps-label">目标收益价格</text>
      <text class="ps-value ps-value-strong">{{targetPrice}} 元</text>
    </view>
    <view class="ps-summary-row">
      <text class="ps-label">目标收益利润</text>
      <text class="ps-value ps-value-strong">{{targetProfit}} 元</text>
    </view>
  </view>

  <!-- 分批建仓步骤与止损明细 -->
  <view class="card ps-steps">
    <view class="ps-section-title">分批建仓步骤与止损明细</view>

    <block wx:for="{{steps}}" wx:key="label">
      <view class="ps-step-block">
        <view class="ps-step-header">
          <view class="ps-step-dot"></view>
          <text class="ps-step-title">{{item.label}}</text>
        </view>

        <view class="ps-step-grid">
          <view class="ps-step-item">
            <text class="ps-label">买入价格</text>
            <text class="ps-value">{{item.buyPrice}} 元</text>
          </view>
          <view class="ps-step-item">
            <text class="ps-label">买入数量</text>
            <text class="ps-value">{{item.buyShares}} 股</text>
          </view>
          <view class="ps-step-item">
            <text class="ps-label">买入金额</text>
            <text class="ps-value">{{item.buyAmount}} 元</text>
          </view>
          <view class="ps-step-item">
            <text class="ps-label">止损价格（全出）</text>
            <text class="ps-value ps-value-warning">{{item.stopPrice}} 元</text>
          </view>
          <view class="ps-step-item">
            <text class="ps-label">止损金额</text>
            <text class="ps-value ps-value-warning">{{item.stopAmount}} 元</text>
          </view>
        </view>
      </view>
    </block>
  </view>

  <!-- 底部提示 -->
  <view class="ps-tip">
    * 本页为“稳健版”演示方案，仅基于固定参数推演风控结构，不构成任何买卖建议。
  </view>

  <!-- 底部按钮区域 -->
  <view class="ps-bottom">
    <view class="ps-bottom-btn ps-bottom-btn-secondary" bindtap="goPayIntro">
      <text>想要更高阶服务 · 查看进阶控局者服务</text>
    </view>
    <view class="ps-bottom-btn" bindtap="goHome">
      <text>返回首页</text>
    </view>
  </view>
</view>
