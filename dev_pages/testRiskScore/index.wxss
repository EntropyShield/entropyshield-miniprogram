/* 整体页面 */
.page {
  min-height: 100vh;
  background-color: #000000;
  padding: 32rpx 24rpx 40rpx;
  box-sizing: border-box;
  color: #ffffff;
}

/* 通用卡片 */
.card {
  background-color: #050505;
  border-radius: 24rpx;
  padding: 24rpx 24rpx 28rpx;
  margin-bottom: 28rpx;
  border: 1px solid #1a2a1a;
  box-shadow: 0 0 24rpx rgba(0, 0, 0, 0.6);
}

/* 顶部说明卡 */
.intro-card {
  border-color: #2aff2a33;
}

.intro-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.intro-sub {
  font-size: 24rpx;
  color: #9aa0a6;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.intro-meta {
  font-size: 22rpx;
  color: #5f6368;
}

/* 题目卡片 */
.question-card {
  margin-top: 8rpx;
}

.question-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 16rpx;
}

/* 选项列表 */
.options {
  margin-top: 8rpx;
}

.option-item {
  margin-top: 12rpx;
  padding: 16rpx 20rpx;
  border-radius: 999rpx;
  border: 1px solid #2aff2a;
  display: flex;
  align-items: center;
  background-color: #050505;
}

.option-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 2rpx solid #2aff2a;
  margin-right: 18rpx;
}

.option-text {
  flex: 1;
}

/* 选项文字 —— 默认白色 */
.option-title {
  font-size: 26rpx;
  color: #ffffff;
}

/* 选中态 */
.option-item.active {
  background: linear-gradient(90deg, #0b2f10, #0f4f1b);
  border-color: #2aff2a;
  box-shadow: 0 0 18rpx rgba(42, 255, 42, 0.4);
}

.option-item.active .option-dot {
  background-color: #2aff2a;
  border-color: #2aff2a;
}

.option-item.active .option-title {
  color: #000000;
  font-weight: 600;
}

/* 底部按钮 */
.footer-bar {
  margin-top: 12rpx;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  background-color: #2aff2a;
  color: #000000;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-submit[disabled] {
  opacity: 0.35;
}

/* 进度文字 */
.footer-progress {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #9aa0a6;
  text-align: center;
}

/* 防止其他样式把 text 颜色搞没 */
text {
  color: inherit;
}
