/* pages/fissionTask/index.wxss */
.page { padding: 24rpx; background: #0D0D0D; min-height: 100vh; color: #E6E6E6; }

.card { border: 2rpx solid #2AFF2A; border-radius: 22rpx; padding: 22rpx; background: rgba(0,0,0,0.35); }

.header { margin-bottom: 14rpx; }
.title { font-size: 40rpx; font-weight: 800; color: #2AFF2A; }
.sub { display: block; margin-top: 8rpx; font-size: 24rpx; color: rgba(255,255,255,0.72); }

.hint { margin-top: 8rpx; font-size: 24rpx; color: rgba(255,255,255,0.82); }

.cta { margin-top: 18rpx; display: flex; flex-direction: column; gap: 10rpx; }
.btn-primary { background: #2AFF2A; color: #000; border-radius: 999rpx; font-weight: 800; }
.cta-tip { text-align: center; font-size: 22rpx; color: rgba(255,255,255,0.70); }

.qrwrap { margin-top: 18rpx; display: flex; flex-direction: column; align-items: center; gap: 10rpx; }
.qr { width: 520rpx; border-radius: 16rpx; background: #fff; }
.tip { margin-top: 10rpx; text-align: center; font-size: 24rpx; color: rgba(255,255,255,0.75); line-height: 1.5; }

.footer { margin-top: 18rpx; display: flex; gap: 12rpx; }
.btn-ghost { flex: 1; background: rgba(255,255,255,0.06); color: rgba(255,255,255,0.85); border: 1rpx solid rgba(255,255,255,0.18); border-radius: 999rpx; }

.debug { margin-top: 22rpx; border: 2rpx dashed rgba(255,255,255,0.35); border-radius: 16rpx; padding: 16rpx; }
.debug-title { font-size: 24rpx; color: rgba(255,255,255,0.85); margin-bottom: 8rpx; }
.debug-item { font-size: 22rpx; color: rgba(255,255,255,0.65); margin-top: 6rpx; word-break: break-all; }
